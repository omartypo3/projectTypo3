//- renders a figure with an image as a child element

mixin image(imageOrArray, thumbnailSize, classname, content)
	if imageOrArray
		//- Image Object (Einzelbild) Handling
		if imageOrArray.url
			- var j77imagemixin_url = imageOrArray.url
			if thumbnailSize
				if imageOrArray.thumbnails[thumbnailSize]
					- j77imagemixin_url = imageOrArray.thumbnails[thumbnailSize]
			- var j77imagemixin_alt = !imageOrArray.alt ? '' : imageOrArray.alt
			- var j77imagemixin_title = !imageOrArray.title ? false : imageOrArray.title
			- var j77imagemixin_classname = !classname ? false : classname
			- var j77imagemixin_description = !imageOrArray.description ? false : imageOrArray.description
			- var j77imagemixin_longdesc = !imageOrArray.longdesc ? false : imageOrArray.longdesc
			figure(class=j77imagemixin_classname)
				img(src=j77imagemixin_url, alt=j77imagemixin_alt, title=j77imagemixin_title, longdesc=j77imagemixin_longdesc)
				block
				if j77imagemixin_description
					figcaption!= j77imagemixin_description
		else
			//- Image Array Handling
			if imageOrArray[0].url
				each imageObject in imageOrArray
					+image(imageObject, thumbnailSize, classname)
						block


//- renders a button element

mixin button(buttonText, classnames, typeOfButton, alignment)
	//- defaults
	if !buttonText
		- var buttonText = 'Button Text';
	if !classnames
		- var classnames = 'btn primary';
	if !typeOfButton
		- var typeOfButton = 'button';
	if !alignment
		- var alignment = 'left'
		
	//- rendering the elements
	.pos(class=alignment)
		button(type=typeOfButton, class=classnames)!=buttonText
		block


//- renders a link element

mixin link(link, classnames, pos)
	//- defaults
	if !link
		- var link['url'] = '/';
		- var link['text'] = 'Hello World';
	if !classnames
		- var classnames = 'primary';
	if !pos
		- var alignment = 'left'
		
	//- rendering the elements
	.pos(class=pos)
		a.btn(href=link.url, class=classnames)!=link.text
		block


//- renders a text element

mixin story(tag, alignment, color, view, text, wysiwyg)
	if !tag
		- var tag = 'h1';
	if !color
		- var color = 'midnight';
	if !view
		- var view = 'first';
	if !text
		- var text = 'Headline';
	if !alignment
		- var alignment = 'align-left';
	if !wysiwyg
		- var wysiwyg = 'Hello World';
	article.story
		section
			case tag
				when 'h1'
					h1(class=color + " " + view + " " + alignment)!=text
				when 'h2'
					h2(class=color + " " + view + " " + alignment)!=text
				when 'h3'
					h3(class=color + " " + view + " " + alignment)!=text
				when 'h4'
					h4(class=color + " " + view + " " + alignment)!=text
				when 'h5'
					h5(class=color + " " + view + " " + alignment)!=text
				when 'h6'
					h6(class=color + " " + view + " " + alignment)!=text
				default
					h1(class=color + " " + view + " " + alignment)!=text
		if wysiwyg
			.copytext!=wysiwyg


//- renders a clumn Div
mixin ds(lg, md, sm, xs)
	if !lg
		- var lg = 12;
	if !md
		- var md = 12;
	if !sm
		- var sm = 12;
	if !xs
		- var xs = 12;
	div(data-size-lg=lg, data-size-md=md, data-size-sm=sm, data-size-xs=xs)
		block




//- renders a accordion

mixin collapse(items)
	if items
		.collapsible-group
			each item in items
				.collapse
					section.collapsible-head
						h4.fifth.align-left.midnight!=title
						i
					.collapsible-content
						p!=copytext
						block



mixin hero_slide(items)
	if items
		each item in items
			figure.single-slide.fx.swipe-right
				if item.image
					img(src=item.image.url, alt=item.image.alt, title=item.image.title)
				if item.link
					a(href=item.link.url, target=item.link.target)
					if item.title && item.subtitle
						figcaption
							section
								h2.align-left.daylight.first!=item.title
								h3.align-left.daylight.second!=item.subtitle
















